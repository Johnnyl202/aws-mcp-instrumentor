{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "MCP Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/mcpserver.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "MCP Client",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/client.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "MCP Server + Client",
            "configurations": ["MCP Server", "MCP Client"],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "MCP",
                "order": 1
            }
        }
    ]
}